polymer <- file.read('input.txt')

reaction <- true

i<- 0

while reaction == true do 
  l <- polymer.length

  if (polymer[i] != polymer[i+1] and polymer[i].upcase == polymer[i+1].upcase)

    polymer <- polymer.substitute(polymer[i]+polymer[i+1] for "")
    i <- 0

  else
    i<- i+1
  end if 
  
  if i+1 >= 1

  reaction <- false

  end if 

end while

return polymer.length
